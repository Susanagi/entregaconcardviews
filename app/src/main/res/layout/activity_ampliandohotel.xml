<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Ampliandohotel"
    android:background="@color/mio">

    <TextView
        android:id="@+id/tituloAmpliandoHotel"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:text="HOTEL HUITACA"
        android:textAlignment="center"
        android:textColor="#E7E690"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ImageView
        android:id="@+id/fotoAmpliandoHotel"
        android:layout_width="244dp"
        android:layout_height="229dp"
        android:layout_marginHorizontal="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/hotelhuitaca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloAmpliandoHotel"
        app:layout_constraintVertical_bias="0.02" />


    <TextView
        android:id="@+id/descripAmpliandoHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Bienvenido al Hotel Huitaca, un refugio de tranquilidad y sostenibilidad enclavado en el hermoso paisaje campestre de Betania, Antioquia."
        android:textAlignment="center"
        android:textColor="#E7E690"
        android:textSize="20dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fotoAmpliandoHotel"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imagen2AmpliandoHotel"
        android:layout_width="253dp"
        android:layout_height="192dp"
        android:padding="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/hotelhuitaa"
        app:layout_constraintBottom_toTopOf="@+id/botonrestaurantes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94" />

    <TextView
        android:id="@+id/telefonoAmpliandoHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="3157854262"
        android:textColor="#E7E690"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.269"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagen2AmpliandoHotel"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Contacto"
        android:textColor="#E7E690"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <RatingBar
        android:id="@+id/valoracionAmpliandoHotel"
        android:layout_width="247dp"
        android:layout_height="58dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/botonrestaurantes"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/mio"
        android:text="Reservar"
        android:textColor="#E7E690"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.918" />

    <TextView
        android:id="@+id/comentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="COMENTARIO"
        android:textAlignment="center"
        android:textColor="#E7E690"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descripAmpliandoHotel"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textocomentario"
        android:layout_width="124dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:text="Muy agradable y pleno el lugar."
        android:textAlignment="center"
        android:textColor="#E7E690"
        android:textSize="10dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comentario"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>