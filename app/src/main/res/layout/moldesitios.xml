<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/nombrelistamachupichu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alto Machupichu"
        android:textSize="26dp"
        android:textStyle="bold"
        app:flow_firstHorizontalBias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

    <ImageView
        android:id="@+id/fotolistamachupichusitios"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/machupichu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombrelistamachupichu"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/Contactolistasitios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacto Susana Giraldo"
        android:textSize="20dp"
        android:textStyle="bold"
        app:flow_firstHorizontalBias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Telefonolistasitios"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Telefonolistasitios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefono 3242310182"
        android:textSize="20dp"
        android:textStyle="bold"
        app:flow_firstHorizontalBias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fotolistamachupichusitios"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/limitepreciolistasitios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80.000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:flow_firstHorizontalBias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Contactolistasitios"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>